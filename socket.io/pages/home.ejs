<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Projeto em socketIO</title>
  </head>
  <body>
    <h1>Hi there!</h1>

    <script src="/socket.io/socket.io.js"></script>
    <script>
      const socket = io()

      socket.on("msg", (msg) => {
        console.log("Mensagem: ", msg)

        setInterval(() => {
          socket.emit("msg", { body: "Cliente enviando mensagem" })
        }, 2000)
      })
    </script>
  </body>
</html>
